@{
    Layout = "formulario";
}


<h2>Crear Cliente</h2>

<div id="content" ng-controller="CustomerController">
    <ng-view></ng-view>
    <span ng-show="isViewLoading" class="viewLoading">
        <img src="~/Content/images/ng-loader.gif" /> loading...
    </span>
    <div ng-class="result">{{message}}</div>
    <hr />
    <form ng-submit="submitForm()" name="frmCustomer">
        <div>
            <label for="email">Nombre del cliente</label>
            <input type="text" ng-model="cust.CustName" name="cname" placeholder="Introduzca su nombre" required ng-minlength="4" ng-maxlength="15" />
            <span class="error" ng-show="(frmCustomer.cname.$dirty||submitted) && frmCustomer.cname.$error.required">se requiere nombre de usuario!</span>
            <span class="error" ng-show="frmCustomer.cname.$dirty && frmCustomer.cname.$error.minlength">La cantidad minima de caracteres es 4</span>
            <span class="error" ng-show="frmCustomer.cname.$dirty && frmCustomer.cname.$error.maxlength">La longitud maxima es de 15 caracteres!</span>
        </div>
        <div>
            <label for="email">E-mail</label>
            <input type="email" ng-model="cust.CustEmail" name="email" placeholder="Introduzca su Email" required />
            <span class="error" ng-show="(frmCustomer.email.$dirty||submitted) && frmCustomer.email.$error.required">Se requiere un email!</span>
            <span class="error" ng-show="(frmCustomer.email.$dirty ||submitted) && frmCustomer.$error.email">Ese email no es correcto!</span>
            <h1>El email es: {{frmCustomer.email.$valid}}</h1>
        </div>
        <div>
            <label for="email">Dirección del cliente</label>
            <input type="text" ng-model="cust.CustDir" name="dir" placeholder="Introduzca su direccion" required ng-minlength="4" required />
            <span class="error" ng-show="(frmCustomer.dir.$dirty||submitted) && frmCustomer.dir.$error.required">se requiere la direccion!</span>
            <span class="error" ng-show="frmCustomer.dir.$dirty && frmCustomer.dir.$error.minlength">La cantidad minima de caracteres es 4</span>
            <span class="error" ng-show="frmCustomer.dir.$dirty && frmCustomer.dir.$error.maxlength">Minimum length required is 15</span>

        </div>
        <input type="submit" value="Submit" ng-disabled="myForm.$invalid">


    </form>

